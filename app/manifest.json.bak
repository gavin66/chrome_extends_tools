{
  "manifest_version": 2,
  "name": "hodgepodge",
  "version": "0.4.0",
  "description": "工具大杂烩,Web 开发,开发人员的工具,字符串编码,二维码生成,图床,文字识别",
  "permissions": [
    "tabs",
    "*://*/"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "64": "vendor/images/icon64.png",
      "128": "vendor/images/icon128.png"
    },
    "default_title": "工具大杂烩"
  },
  "options_page": "options.html",
  "content_security_policy": "style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval' https://cdn.jsdelivr.net; object-src 'self' ;"
}